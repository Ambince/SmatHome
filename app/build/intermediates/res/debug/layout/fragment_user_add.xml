<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_user_name" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入用户名"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:id="@+id/useradd_mname"
                android:maxLength="5"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_nick" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入称谓"
                android:id="@+id/useradd_callname"
                android:maxLength="5"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_hometown" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入籍贯"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" 
                android:id="@+id/useradd_native"
                android:maxLength="5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_avoid" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入忌口"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:id="@+id/useradd_taboos" 
                android:maxLength="100"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_hobby" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入爱好"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:id="@+id/useradd_hoby"
                android:maxLength="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_explain" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入说明"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:id="@+id/useradd_specifier"
                android:maxLength="1000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_work_type" />

            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="请输入工作类别"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:id="@+id/useradd_worktype" 
                android:maxLength="8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dip" >

            <Button
                android:id="@+id/useradd_add_btn"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:background="@layout/btnstyle"
                android:text="@string/add_user" />
        </LinearLayout>
    </LinearLayout>

</ScrollView><!-- From: file:/C:/Users/hemingli/Desktop/XiaYeSmartHome/app/src/main/res/layout/fragment_user_add.xml -->