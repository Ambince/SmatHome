<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee"
              android:orientation="vertical">

    <TextView
            style="@style/title_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="添加灯光"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

        <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="筛选"/>

        <EditText
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入地址或端口号查询"
                android:id="@+id/lightall_content"
                android:inputType="number"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textSize="14sp"
                android:text="搜索"
                android:id="@+id/lightall_search"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                style="@style/cooklist_text_style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:padding="5dp"
                android:text="选择"/>

        <TextView
                style="@style/cooklist_text_style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:padding="5dp"
                android:text="名称"/>
        <TextView
                style="@style/cooklist_text_style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:padding="5dp"
                android:text="地址"/>
        <TextView
                style="@style/cooklist_text_style"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:padding="5dp"
                android:text="端口"/>

    </LinearLayout>


    <ListView
            android:id="@+id/light_all_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:cacheColorHint="#ffffffff"
            android:scrollbars="none">
    </ListView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="8dp"
                  android:gravity="bottom">

        <Button android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="添加所选灯光"
                android:padding="4dp"
                android:textSize="12sp"
                android:background="@layout/btnstyle"
                android:id="@+id/lightall_addlights"
                />
        <Button android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="返回"
                android:padding="4dp"
                android:textSize="12sp"
                android:id="@+id/lightall_back"
                android:background="@layout/btnstyle"
                />
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/dell/AndroidStudioProjects/SmartHome/app/src/main/res/layout/lights_all.xml -->