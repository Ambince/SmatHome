<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/cookingutensil_cookname_txt"
            style="@style/cooklist_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="123" />

        <TextView
            android:id="@+id/cookingutensil_machinestate_txt"
            style="@style/cooklist_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="123" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
             >

            <Button
                android:id="@+id/cookingutensil_look_btn"
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@layout/btnstyle"
                android:clickable="true"
                android:focusable="false"
                android:text="查看" />

            <Button
                android:id="@+id/cookingutensil_logout_btn"
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@layout/btnstyle"
                android:clickable="true"
                android:focusable="false"
                android:text="注销" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/hemingli/Desktop/XiaYeSmartHome/app/src/main/res/layout/cookingutensilitem.xml -->