            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text"
            android:text="@string/item_no" />

        <TextView
            style="@style/list_text_style"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
