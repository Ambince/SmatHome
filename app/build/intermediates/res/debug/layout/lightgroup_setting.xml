<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/scrollView"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:scrollbars="none">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="vertical">

        <TextView
                style="@style/title_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text="群组设置"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                >

            <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="筛选"/>

            <EditText
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入地址或端口号查询"
                    />

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textSize="14sp"
                    android:text="搜索"/>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="群号"/>

            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="名称"/>

            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="位置"/>

            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="硬件类型"/>
            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="地址"/>
            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="端口"/>
            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="备注"/>
            <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text"
                    android:padding="5dp"
                    android:text="删除"/>

        </LinearLayout>

        <ListView
                android:id="@+id/lightgroup_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:cacheColorHint="#ffffffff"
                android:scrollbars="none">
        </ListView>

    </LinearLayout>
</HorizontalScrollView><!-- From: file:/C:/Users/hemingli/Desktop/XiaYeSmartHome/app/src/main/res/layout/lightgroup_setting.xml -->