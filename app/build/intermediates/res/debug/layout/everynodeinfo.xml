<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="烹调步骤" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="节点编号:" />

            <TextView
                android:id="@+id/everynodeinfo_nodenum_txt"
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="节点时长:" />

            <TextView
                android:id="@+id/everynodeinfo_nodetime_txt"
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="提示信息:" />

            <EditText
                android:id="@+id/everynodeinfo_tips_edt"
                style="@style/cooklist_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/everynodeinfo_last_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="上一个" />

        <Button
            android:id="@+id/everynodeinfo_next_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="下一个" />
        <!--
        <Button
            android:id="@+id/everynodeinfo_edit_btn"
            style="@style/cooklist_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@layout/btnstyle"
            android:padding="10dp"
            android:text="编辑" />
        
        <Button
            android:id="@+id/everynodeinfo_save_btn"
            style="@style/cooklist_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@layout/btnstyle"
            android:padding="10dp"
            android:text="保存" />
        -->

        <Button
            android:id="@+id/everynodeinfo_back_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="返回" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Chensir/Develop/AndroidStudioProjects/XiaYeSmartHome/app/src/main/res/layout/everynodeinfo.xml -->