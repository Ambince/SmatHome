<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="烹调记录详细信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="关联的菜谱名" />

                <Spinner
                    android:id="@+id/cookbookdetail_menuname_spn"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="关联设备条形码" />

                <TextView
                    android:id="@+id/cookbookdetail_machineShapeCode_txt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="适用人数" />

                <EditText
                    android:id="@+id/cookbookdetail_usenum_txt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    />

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="烹调记录总时长" />

                <TextView
                    android:id="@+id/cookbookdetail_cookrecordtime_txt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="文件存储路径" />

                <TextView
                    android:id="@+id/cookbookdetail_path_txt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="备注" />

                <EditText
                    android:id="@+id/cookbookdetail_remark_edt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="节点数" />

                <TextView
                    android:id="@+id/cookbookdetail_nodenum_txt"
                    style="@style/cooklist_text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:text="12" />

                <Button
                    android:id="@+id/cookbookdetail_everynodeinfo_btn"
                    style="@style/cooklist_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@layout/btnstyle"
                    android:text="点击查看每个节点信息" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cookbookdetail_save_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="保存" />

        <Button
            android:id="@+id/cookbookdetail_edit_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="编辑" />

        <Button
            android:id="@+id/cookbookdetail_back_btn"
            style="@style/cooklist_text_style"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@layout/btnstyle"
            android:padding="4dp"
            android:text="返回" />
    </LinearLayout>

</LinearLayout>