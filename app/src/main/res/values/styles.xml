<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="list_text_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_smalltext_style">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cooklist_text_style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainTabRadioTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/fragm_tab_seletor</item>
        <item name="android:button">@null</item>
        <item name="android:maxEms">5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>